{
  "compilerOptions": {
    "module": "commonjs",
    
    "target": "es2023",
    
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      
      "@users/*": ["modules/users/*"],
      "@delivery/*": ["modules/deliveries/*"],
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    
    "sourceMap": true,
    "incremental": true,

    "removeComments": true,
    "declaration": false,
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts",
    "jest.config.ts",
    "prisma"
  ]
}
